	<style>
		* {
			margin: 0px;
			padding: 0px;
			-webkit-margin-before: 0;
			-webkit-margin-after: 0;
		}
		body, html {
			width: 100%;
			height: 100%;
			margin: 0px;
			padding: 0px;
			z-index: 10;
			background-size: 100%;
			background-position: top;
			background-repeat: no-repeat;
			background-color: #000;
		}
		.fader {
			width: 100%;
			height: 100%;
			z-index: 12;
			background-color: rgba(0,0,0,.0);
			overflow: hidden;
			-webkit-transition: all 3s;	
		}
		.faded {
			background-color: rgba(0,0,0,.6);
			-webkit-transition: all 3s;	
		}
		.wrapper {
		    width: 800px;
		    height: 300px;
		    position: absolute;
		    top:0;
		    bottom: 0;
		    left: 0;
		    right: 0;
		    margin: auto;
		    text-align: center;
		}
		.wrapper .head {
			line-height: 200px;
			width: 100%;
			height: 200px;
			font-size: 200px;
			font-weight: bold;
			text-align: center;
			font-family:  "Open Sans Condensed";
			text-shadow: 0 3px 0 rgba(0,0,0,.7);
			color: rgba(255,255,255,1);
			opacity: 0.5;
			z-index: 100;
			-webkit-transition: opacity 3s ease;	
		}
		.wrapper:hover > .head {
			opacity: 1;
			-webkit-transition: all 1s ease;
		}

		.wrapper:hover > .title {
			opacity: 1;
			color: rgba(46, 204, 113,1);
			-webkit-transition: all 1s ease;
		}
		.wrapper .title {
			font-size: 45px;
			text-align: center;
			color: #fff;
			opacity: 0.5;
			font-family: 'Poiret One', cursive;
			text-shadow: 0 1px 0 rgba(0,0,0,.7);
			-webkit-transition: opacity 3s ease;	
		}
		.button-over {
			width: 100%;
			height: 75px;
			text-align: center;
		}
		.web {
			display: inline-block;
			width: 60%;
			height: 50px;
			font-family: 'Open Sans', sans-serif;
			color: #fff;
			text-shadow: 0 1px 0 rgba(0,0,0,.7);
			/*background-color: #2ecc71;*/
			font-size: 30px;
		}
		.button-wrapper {
			display: inline-block;
			width: 50%;
			float: left;
			height: 50px;
		}
		.button {
			font-family: 'Open Sans', sans-serif;
			font-size: 30px;
			color: #fff;
			text-shadow: 0 1px 0 rgba(0,0,0,.7);
		}
		.button:nth-of-type(1) { background-image: url('/images/land/downloads.png'); width: 300px; height: 75px; background-position: 0px 0px; }
		.button:nth-of-type(2) { background-image: url('/images/land/downloads.png'); width: 300px; height: 75px; background-position: 0px 0px; }

		@media screen and (device-aspect-ratio: 2/3) {
			body {
				background-image: url('/images/land/iphone1.jpg');
				background-size: 100%;
				background-position: top;
				background-repeat: no-repeat;
			}
			.wrapper .head { opacity: 1}
			.wrapper .title { opacity: 1}
		}
		@media screen and (device-aspect-ratio: 40/71) {
			body {
				background-image: url('/images/land/iphone1.jpg');
				background-size: 100%;
				background-position: top;
				background-repeat: no-repeat;
			}
			.wrapper .head { opacity: 1}
			.wrapper .title { opacity: 1}
		}
		@media screen and (device-aspect-ratio: 3/4) {
			body {
				background-image: url('/images/land/ipad1.jpg');
				background-size: 100%;
				background-position: top;
				background-repeat: no-repeat;
			}
			.wrapper .head { opacity: 1}
			.wrapper .title { opacity: 1}
		}

	</style>
	<script type="text/javascript">
		$(document).ready(function() {
			

			if (screen.width >= 1000) {
				console.log('bigger 1000');
				var rand = Math.floor(Math.random() * 8) + 1;
				var urled ="/images/land/landone" + rand + ".jpg";
				$('body').css('background-image' , 'url(' + urled + ')');
			} else {
				console.log('lower 1000');
				var rand = Math.floor(Math.random() * 3) + 1;
				var urled ="/images/land/iphone" + rand + ".jpg";
				$('body').css('background-image' , 'url(' + urled + ')');
			}

			$('a').on('mouseover',function() {
					$('.fader').addClass('faded');
			});
			$('a').on('mouseout',function() {
					$('.fader').removeClass('faded');
			});
		})

		

	</script>
		
